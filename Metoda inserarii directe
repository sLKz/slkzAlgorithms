#include <iostream> 

using namespace std; 

int main()
{	
    int v[50];	
    int n; 	
    
    cout << "n = ";	
    cin >> n; 	
    
    for (int i = 0; i < n; ++i)	
    {		
        cout << "v[" << i + 1 << "] = ";		
        cin >> v[i];	
    } 	
    
    cout << "\n"; 	
    
    cout << "Vectorul este: ";	
    for (int i = 0; i < n; ++i)	
    {		
        cout << v[i] << " ";	
    } 	
    
    cout << "\n"; 	
    
    for (int i = 1; i < n; ++i)
    {
        int aux = v[i];
        int j = i - 1;
        
        while (j > 0 and aux < v[j])
        {
            v[j + 1] = v[j];
            j--;
        }
        
        if (aux >= v[j])
        {
            v[j + 1] = aux;
        }
        else
        {
            v[1] = v[0];
            v[0] = aux;
        }
    }
    
    cout << "Vectorul sortat este: ";	
    for (int i = 0; i < n; ++i)	
    {		
        cout << v[i] << " ";	
    }
}
