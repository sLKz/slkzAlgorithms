#include <iostream>

using namespace std;

int main()
{
   int a[20][20],i,j,n,ok=1;

   cout<<"Dimensiunea matricii: ";
   cin>>n;

   for(i=0;i<n;i++)
    for(j=0;j<n;j++)
    {
    cout<<"a["<<(i+1)<<"]["<<(j+1)<<"]= ";
    cin>> a[i][j];
    }

    cout<<"Matricea citita este: ";
    cout<<endl;
    for(i=0;i<n;i++)
    {
     for(j=0;j<n;j++)
            cout<< a[i][j]<<" ";
            cout<<endl;
    }

    for(j=0;j<n/2;j++)
        for(i=0;i<n;j++)
    if(a[i][j]!=a[i][n-1-j])
    ok=0;

    if(ok==1)
        cout<<"Matrice simetrica fata de axa verticala. ";
            else
        cout<<"Matrice nesimetrica fata de axa verticala. ";


   return 0;

}
