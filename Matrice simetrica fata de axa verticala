#include <iostream>

using namespace std;

int main()
{
    int matrice[30][30], n;
    
    cout << "n = ";
    cin >> n;
    
    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < n; j++)
        {
            cout << "matrice[" << i + 1 << "][" << j + 1 << "] = ";
            cin >> matrice[i][j];
        }
    }
    
    cout << "\n";
    
    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < n; j++)
        {
            cout << matrice[i][j] << " ";
        }
        
        cout << "\n";
    }
 
    for (size_t j = 0; j < n / 2; j++)
    {
        for (size_t i = 0; i < n; i++)
        {
            if (matrice[i][j] != matrice[i][n - 1 - j])
            {
                cout << "\nMatricea nu este simetrica fata de axa orizontala.";
                return 0;
            }
        }
    }
    
    cout << "\nMatricea este simetrica fata de axa orizontala.";
    return 0;
}
