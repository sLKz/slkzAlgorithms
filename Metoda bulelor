#include <iostream> 

using namespace std; 

int main()
{	
    int v[50];	
    int n; 	
    
    cout << "n = ";	
    cin >> n; 	
    
    for (int i = 0; i < n; ++i)	
    {		
        cout << "v[" << i + 1 << "] = ";		
        cin >> v[i];	
    } 	
    
    cout << "\n"; 	
    
    cout << "Vectorul este: ";	
    for (int i = 0; i < n; ++i)	
    {		
        cout << v[i] << " ";	
    } 	
    
    cout << "\n"; 	
    
    bool done = false;
    while (!done)
    {
        done = true;
        
        for (int i = 0; i < n - 1; ++i)
        {
            if (v[i] > v[i + 1])
            {
                int aux = v[i];
                v[i] = v[i + 1];
                v[i + 1] = aux;
                
                done = false;
            }
        }
    }
    
    cout << "Vectorul sortat este: ";	
    for (int i = 0; i < n; ++i)	
    {		
        cout << v[i] << " ";	
    }
}
