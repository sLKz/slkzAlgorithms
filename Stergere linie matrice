#include <iostream>

using namespace std;

int main()
{
    int matrice[30][30], n, m;
    int p;

    cout << "n = ";
    cin >> n;

    cout << "m = ";
    cin >> m;

    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < m; j++)
        {
            cout << "matrice[" << i << "][" << j << "] = ";
            cin >> matrice[i][j];
        }
    }

    cout << "\n";

    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < m; j++)
        {
            cout << matrice[i][j] << " ";
        }

        cout << "\n";
    }

    cout << "\n";

    do
    {
        cout << "p = ";
        cin >> p;
    } while (p < 1 or p > m);

    for (size_t i = p - 1; i < n - 1; i++)
    {
        for (size_t j = 0; j < m; j++)
        {
            matrice[i][j] = matrice[i + 1][j];
        }
    }

    n--;

    cout << "\n";

    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < m; j++)
        {
            cout << matrice[i][j] << " ";
        }

        cout << "\n";
    }

    return 0;
}
