#include <iostream>
using namespace std;
int main
{
  int a[20][20], n, s=0, i, j;
  
  cout << "dimensinea matricii";
  cin >> n;
  
  for(i=0;i<n;i++)
    for(j=0;j<n;j++)
    {
      cout<< "a[" << (i+1) << "][" << (j+1) << "]= ";
      cin >> a[i][j];
    }
  
  cout<<"matricea citica este: "<<endl;
  
  for(i=0;i<n;i++)
  { 
    for(j=0;j<n;j++)
      cout << a[i][j]<< " ";
  cout << endl; 
  }
  
  for(i=0;i<n;i++)
    s=s+a[i][i];
    
  cout << suma elem de pe diag principala este: " << s;
  return 0;
}
