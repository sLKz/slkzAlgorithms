#include <iostream>

int main()
{
    int a[20], n;
    int nrp = 0, sum = 0;

    std::cout << "Nr. de elem.: ";
    std::cin >> n;

    for (int i = 0; i < n; ++i)
    {
        std::cout << "a[" << i + 1 << "] = ";
        std::cin >> a[i];

        if (a[i] % 2 == 0)
        {
            nrp++;
            sum += a[i];
        }
    }

    if (nrp != 0)
    {
        std::cout << "\nMedia aritmetica a numerelor pare este: " << (double)sum / nrp;
    }
    else
    {
        std::cout << "\nNu sunt numere pare.";
    }
}
