#include <iostream>

using namespace std;

int main()
{
    int matrice[30][30], n;
    int vector[900], k;
    
    cout << "n = ";
    cin >> n;
    
    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < n; j++)
        {
            cout << "matrice[" << i + 1 << "][" << j + 1 << "] = ";
            cin >> matrice[i][j];
        }
    }
    
    cout << "\n";
    
    for (size_t i = 0; i < n; i++)
    {
        for (size_t j = 0; j < n; j++)
        {
            cout << matrice[i][j] << " ";
        }
        
        cout << "\n";
    }
 
    for (size_t j = 0; j < n; j++)
    {
        for (size_t i = 0; i < n; i++)
        {
            vector[k++] = matrice[i][j];   
        }
    }
    
    cout << "\n";
    
    for (size_t i = 0; i < k; i++)
    {
        cout << vector[i] << " ";
    }
}
